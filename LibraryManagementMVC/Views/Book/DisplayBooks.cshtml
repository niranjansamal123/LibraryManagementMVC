@model IEnumerable<LibraryManagementMVC.Models.Book>

@{
    ViewBag.Title = "DisplayBooks";
}

@section Title{
    <h4>View Books</h4>
}

<div class="container mt-2">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr align="center">
                <th>
                    @Html.DisplayNameFor(model => model.Bname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publication)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr align="center">
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Bname)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Publication)
                    </td>
                    <td class="align-middle">
                        <text>@item.Year.ToString("dd/MM/yyyy")</text>
                    </td>
                    <td class="align-middle">
                        @Html.ActionLink("Edit", "EditBook", new { id = item.Bid }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Details", "DisplayBook", new { id = item.Bid }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "DeleteBook", new { id = item.Bid }, new { onclick = "return confirm('Are you sure of deleting the record?')", @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
