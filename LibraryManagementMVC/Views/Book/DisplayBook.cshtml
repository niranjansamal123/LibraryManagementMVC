@model LibraryManagementMVC.Models.Book

@{
    ViewBag.Title = "DisplayBook";
}

@section Title{
    <h4>View Book Details</h4>
}

<div class="container mt-2">
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Bname)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Bname)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Author)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Publication)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Publication)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Year)
                </dt>
                <dd class="col-sm-8">
                    @Model.Year.ToString("dd/MM/yyyy")
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <p>
                @Html.ActionLink("Edit", "EditBook", new { id = Model.Bid }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Back to Book List", "DisplayBooks", new { @class = "btn btn-secondary" })
            </p>
        </div>
    </div>
</div>
